var sys = include('sys')

var terminalsize = sys.terminalsize()

# Clear Screen

var line = ' '.repeat(terminalsize[0])
var clearscreen = ''
for (var i in range(terminalsize[1])) {
    clearscreen = '\n' + clearscreen + line
}

print('\033[0m' + clearscreen)

