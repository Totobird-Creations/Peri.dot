# Added methods for strings

var a = 'Hello, World! I like Peri.dot. '
print(prefix='\n',
    str(a)
)

var a = a.repeat(2)
print(prefix='\n',
    str(a)
)

var a = a.split(' ')
print(prefix='\n',
    str(a)
)

var a = a.join('\n')
print(prefix='\n',
    str(a)
)

var a = a.replace('\n', ' ')
print(prefix='\n',
    str(a)
)

var a = a.slice(0, a.length / 2, 1)
print(prefix='\n',
    str(a)
)