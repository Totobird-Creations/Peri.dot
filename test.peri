var a = 10
var i = 20

switch (i as a) {
    when (i == 0) {
        print('0: ' + str(i))
    }
    when (i <= 20) {
        print('1~20: ' + str(i))
    }
    when (i <= 70) {
        print('21~70: ' + str(i))
    }
    when (i <= 100) {
        print('71~100: ' + str(i))
    }
    else {
        print('Invalid value: ' + str(i))
    }
}

print(str(i))



